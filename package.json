{
  "name": "smart-contract-templates",
  "version": "1.0.0",
  "description": "Smart Contract templates",
  "homepage": "https://bitbucket.org/applicature/solidity.project-template#readme",
  "license": "UNLICENSED",
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/applicature/solidity.smart-contract-templates.git"
  },
  "author": "Andrew Zubko <andrew@applicature.com>",
  "engines": {
    "node": ">=10.5.0"
  },
  "scripts": {
    "bridge": "node ../ethereum-bridge/bridge -a 9 -H 127.0.0.1 -p 9545 --dev",
    "lint": "npm run solhint",
    "ganache": "ganache-cli > /dev/null 2>&1 &",
    "test": "truffle test",
    "develop": "truffle develop",
    "compile": "truffle compile",
    "coverage": "./node_modules/.bin/solidity-coverage",
    "migrate": "truffle migrate --network development",
    "migrate:testnet": "truffle migrate --network rinkeby",
    "migrate:mainnet": "truffle migrate --network rinkeby",
    "solhint": "node ./node_modules/solhint/solhint.js contracts/*.sol",
    "solium": "solium -d contracts/",
    "precommit": "npm run solhint && npm run coverage && npm run solium",
    "test:ci": "npm run ganache && npm run solium && npm run solhint && npm run test"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "minimetoken": "^0.2.0",
    "truffle": "^4.1.14"
  },
  "devDependencies": {
    "bignumber.js": "^4.1.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eth-gas-reporter": "^0.1.10",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-testrpc": "^4.1.3",
    "ganache-cli": "6.1.0",
    "husky": "^0.14.3",
    "mocha": "^5.0.0",
    "mocha-junit-reporter": "^1.17.0",
    "mocha-multi-reporters": "^1.1.7",
    "solhint": "^1.1.10",
    "solidity-coverage": "^0.5.0",
    "solium": "^1.1.7",
    "truffle-hdwallet-provider": "0.0.5",
    "openzeppelin-solidity": "^1.9.0",
    "truffle-flattener": "^1.2.6"
  }
}
